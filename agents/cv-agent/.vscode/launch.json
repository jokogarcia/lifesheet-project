{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "debugpy",
      "request": "launch",
      "name": "FastAPI: Uvicorn (reload)",
      "module": "uvicorn",
      "args": [
        "src.app.main:app",
        "--reload",
        "--host",
        "0.0.0.0",
        "--port",
        "${input:apiPort}"
      ],
      "envFile": "${workspaceFolder}/.env",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "subProcess": true,
      "justMyCode": true
    },
    {
      "type": "debugpy",
      "request": "launch",
      "name": "Pytest: All tests",
      "module": "pytest",
      "args": [
        "-q"
      ],
      "envFile": "${workspaceFolder}/.env",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "justMyCode": true
    }
  ],
  "inputs": [
    {
      "type": "promptString",
      "id": "apiPort",
      "description": "Port for Uvicorn to bind to"
    }
  ]
}